<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rela_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">


            <RadioGroup
                android:id="@+id/rg_group"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_white_frame"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/block_bg_selector_left_round"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="推荐段子"
                    android:textColor="@drawable/btn_tab_text_selector1"
                    android:textSize="@dimen/text_size_13"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/white"></View>


                <RadioButton
                    android:id="@+id/rb_finish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/block_bg_selector_right_round"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="搞笑热图"
                    android:textColor="@drawable/btn_tab_text_selector1"
                    android:textSize="@dimen/text_size_13"/>/>
            </RadioGroup>
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
