<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cretin.ui.fragment.user.MeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg_color"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_me"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/login_bg"
                android:clickable="true">

                <LinearLayout
                    android:id="@+id/ll_avatar"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.cretin.view.CircleImageView
                        android:id="@+id/iv_portrait"
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:layout_centerHorizontal="true"
                        android:padding="11dp"
                        android:src="@mipmap/default_avatar"/>

                    <TextView
                        android:paddingRight="11dp"
                        android:paddingLeft="11dp"
                        android:paddingBottom="11dp"
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_portrait"
                        android:layout_centerHorizontal="true"
                        android:text="登录"
                        android:textColor="@color/white"
                        android:textSize="17sp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="14dp"
                    android:src="@mipmap/shezhi"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_clearcache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg_selector"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/item_bg_selector"
                        android:drawableLeft="@mipmap/cache"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="10dp"
                        android:paddingTop="12dp"
                        android:text="清除缓存"
                        android:textColor="@color/font_black1"
                        android:textSize="@dimen/text_size_14"/>

                    <TextView
                        android:id="@+id/tv_cache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/arrow_right"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:textColor="@color/font_black4"
                        android:textSize="@dimen/text_size_14"/>
                </LinearLayout>

                <include layout="@layout/left_padding_line"/>

                <LinearLayout
                    android:id="@+id/ll_banbengengxin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg_selector"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/item_bg_selector"
                        android:drawableLeft="@mipmap/version"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="10dp"
                        android:paddingTop="12dp"
                        android:text="版本更新"
                        android:textColor="@color/font_black1"
                        android:textSize="@dimen/text_size_14"/>

                    <TextView
                        android:id="@+id/tv_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/arrow_right"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:textColor="@color/font_black4"
                        android:textSize="@dimen/text_size_14"/>
                </LinearLayout>

                <include layout="@layout/left_padding_line"/>

                <TextView
                    android:id="@+id/tv_fankui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg_selector"
                    android:drawableLeft="@mipmap/suggest"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="10dp"
                    android:paddingTop="12dp"
                    android:text="意见反馈"
                    android:textColor="@color/font_black1"
                    android:textSize="@dimen/text_size_14"/>

                <include layout="@layout/left_padding_line"/>

                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg_selector"
                    android:drawableLeft="@mipmap/about"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="10dp"
                    android:paddingTop="12dp"
                    android:text="意见反馈"
                    android:textColor="@color/font_black1"
                    android:textSize="@dimen/text_size_14"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_bg_selector"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:paddingBottom="14dp"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:paddingTop="14dp"
                android:text="安全退出"
                android:textColor="@color/font_black4"
                android:textSize="@dimen/text_size_14"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/app_bg_color"/>
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>